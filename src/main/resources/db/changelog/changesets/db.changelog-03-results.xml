<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!-- Удаление внешнего ключа на user_id, если он существует -->
    <changeSet id="20250110-01-drop-fk-results-user" author="Almukanov">
        <dropForeignKeyConstraint
                baseTableName="results"
                constraintName="FK_RESULTS_USER"/>
    </changeSet>

    <!-- Удаление колонки user_id -->
    <changeSet id="20250110-02-drop-column-user_id" author="Almukanov">
        <dropColumn tableName="results" columnName="user_id"/>
    </changeSet>

    <!-- Добавление новой колонки email -->
    <changeSet id="20250110-03-add-column-email" author="Almukanov">
        <addColumn tableName="results">
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>


</databaseChangeLog>
